<%- include('../partials/header.ejs')%>

    <main class="d-flex align-items-center justify-content-between flex-wrap">

        <div>
            <img src="<%= item.image %>" class="img-fluid rounded" width="350">
        </div>

        <div>
            <h2 class="slogan text-center">Edit Item</h2>

            <form class="border rounded border-warning p-3 w-100" method="POST" action="/items/<%= item.id%>?_method=PUT">
                <div class="mb-3">
                    <label class="form-label" for="condition">Condition</label>
                    <select class="form-select" name="condition" id="condition" required>
                        <option disabled value="">Select product condition</option>
                        <!-- if condition is 'new', then option value='new' -->
                        <option value="new" <%= item.condition === 'new' ? 'selected' : '' %>>New</option>
                        <option value="like-new" <%= item.condition === 'like-new' ? 'selected' : '' %>>Used - Like New</option>
                        <option value="good" <%= item.condition === 'good' ? 'selected' : '' %>>Used - Good</option>
                        <option value="fair" <%= item.condition === 'fair' ? 'selected' : '' %>>Used - Fair</option>
                        <option value="other" <%= item.condition === 'other' ? 'selected' : '' %>>Other</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" placeholder="Title" type="text" value="<%= item.title %>" name="title" id="title" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <input class="form-control" placeholder="0.00" type="number" value="<%= item.price %>" name="price" id="price" step="0.01"
                        required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" placeholder="Add any details about your product" name="details"
                        id="description" rows="3" required><%= item.details %></textarea>
                </div>

                <div class="mb-3">
                    <label for="formFile" class="form-label">Image</label>
                    <input class="form-control" type="file" id="formFile" name="image">
                </div>

                <button type="submit" class="buttons-dark btn btn-dark w-100">Submit</button>
            </form>
        </div>

        <div>
            <img src="/images/logo_white.png" class="img-fluid rounded" width="350" alt="logo">
        </div>
    </main>

<%- include('../partials/footer.ejs')%>